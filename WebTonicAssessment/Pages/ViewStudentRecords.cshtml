@page
@model WebTonicAssessment.Pages.ViewStudentRecordsModel
@{
}

<style>
    .table-striped > tbody > tr:nth-child(odd) > td,
    .table-striped > tbody > tr:nth-child(odd) > th {
        background-color: #ff9900 !important;
        color: white;
        // Choose your own color here
    }

    .table-striped > tbody > tr {
        height: 50px !important
    }

    .changeColor {
        background-color: #676b6d;
        border-color: #676b6d;
        color: white;
        width: 120px;
    }
</style>
<div class="container">

   

    <hr />
    <div style="margin-left:15px;">
        <h4>Students Records</h4>
        <hr/>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <table id="viewdataRecords" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>Student No</th>
                            <th>First Name</th>
                            <th>Surname</th>
                            <th>Course Code</th>
                            <th>Course Description</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            if (Model.studentsRecords != null)
                            {
                                foreach (var student in Model.studentsRecords)
                                {
                                    <tr>
                                        <td>@student.StudentNo</td>
                                        <td>@student.FirstName</td>
                                        <td>@student.Surname</td>
                                        <td>@student.CourseCode</td>
                                        <td>@student.CourseDescription</td>
                                        <td>@student.Grade</td>
                                    </tr>
                                }
                            }
                        }


                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Student No</th>
                            <th>First Name</th>
                            <th>Surname</th>
                            <th>Course Code</th>
                            <th>Course Description</th>
                            <th>Grade</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>


</div>

@section Scripts{
    <script>
         
        $(document).ready(function () {
            $('#viewdataRecords').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    { extend: "copy", className: "changeColor" },
                    { extend: "csv", className: "changeColor" },
                    { extend: "excel", className: "changeColor" },
                    { extend: "pdf", className: "changeColor" },
                    { extend: "print", className: "changeColor" }
                ]
            });
        });
    </script>
}
